<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="25dp"
              android:gravity="center_vertical"
              android:background="@drawable/rounded_item_background"
              android:layout_marginBottom="10dp">

    <ImageView
            android:id="@+id/item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_book"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:contentDescription="@null"/>

    <TextView
            android:id="@+id/item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageButton
                android:id="@+id/button_book"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_book"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:background="@drawable/ripple_effect_items"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/see_theory"/>

        <ImageButton
                android:id="@+id/button_solve"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_solve"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:background="@drawable/ripple_effect_items"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/solve_problem"/>
    </LinearLayout>
</LinearLayout>
