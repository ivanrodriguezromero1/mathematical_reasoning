<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="8dp"
              android:paddingStart="16dp"
              android:paddingEnd="16dp"
              android:gravity="start|center_vertical">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <ImageButton
                android:id="@+id/btnCrossOut"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/symbols_remove"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="4dp"
                android:background="@drawable/ripple_effect_cross_out"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/rasonaGray"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/cross_out_text" />

        <TextView
                android:id="@+id/crossOutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cross_out_text"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <ImageButton
                android:id="@+id/btnTips"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_lightbulb"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="4dp"
                android:background="@drawable/ripple_effect_tips"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/rasonaStrongOrange"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/tip_text" />

        <TextView
                android:id="@+id/tipText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tip_text"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <ImageButton
                android:id="@+id/btnPreview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/symbols_text_ad"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="4dp"
                android:background="@drawable/ripple_effect_preview"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/rasonaStrongLightBlue"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/preview_text" />

        <TextView
                android:id="@+id/previewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preview_text"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <ImageButton
                android:id="@+id/btnSendProblem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/symbols_send"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="4dp"
                android:background="@drawable/ripple_effect_send_problem"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/rasonaStrongLightBlue"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/send_problem_text" />

        <TextView
                android:id="@+id/sendProblemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_problem_text"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
    </LinearLayout>
</LinearLayout>
