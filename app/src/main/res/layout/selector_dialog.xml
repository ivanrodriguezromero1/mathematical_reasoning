<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="30dp"
              android:background="@drawable/custom_selector_dialog_background">

    <TextView
            android:id="@+id/selector_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    <ScrollView
            android:id="@+id/selector_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:scrollbars="vertical"
            android:paddingTop="16dp"
            style="@style/custom_recycler_view_scroll">

            <RadioGroup
                    android:id="@+id/selector_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"/>

    </ScrollView>

    <Button
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_close_selector_dialog"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
</LinearLayout>
